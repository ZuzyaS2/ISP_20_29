        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="19,0,0,0" VerticalAlignment="Center" Width="281" Height="44"/>
        <Button x:Name="Exit" Content="Exit&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Height="51" RenderTransformOrigin="0.495,1.021" Background="#FFB90303" BorderBrush="#FF031C80" Margin="19,278,0,0" Foreground="White" FontWeight="Bold"/>
