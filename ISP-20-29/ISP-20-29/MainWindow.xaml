        <DataGrid HorizontalAlignment="Left" Height="0" Margin="27,142,0,0" VerticalAlignment="Top" Width="27" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Margin="19,374,0,0" VerticalAlignment="Top" Width="281" Height="30" Click="Button_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="20,20,20,20" Width="100" Height="100" VerticalAlignment="Top" HorizontalAlignment="Right" CornerRadius="25,25,25,25">
            <Label Content="Х" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="48" MouseLeftButtonDown="Label_MouseLeftButtonDown"/>
        </Border>

    </Grid>
</Window>
